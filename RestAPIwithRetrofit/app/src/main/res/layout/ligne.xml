<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewIntitule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intitule: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSpecialite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialite: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSociete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Societe: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewPays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pays: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewNbPostes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NbPostes: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Ajoutez d'autres TextView pour d'autres champs de votre modÃ¨le 'offre' ici -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
